<section>
  <div class="group box">
    <h2>
      <%= image_tag @group.icon || 'icon', style: 'height:64px;width:64px', class: 'grp-icon' %>
      <%= @group.name %>
    </h2>
    <hr>
    <%# render @transactions %>
    </div>
  </div>

  <div class="actions">
    <%= button_to "Edit this Group", edit_group_path(@group), method: :get %>
    <%= button_to "Back to Groups", groups_path, method: :get %>
    <%= button_to "Destroy this Group", @group, method: :delete %>
  </div>
</section>
