<section>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="fields">
      <div class="field">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "active" %>
    </div>
  <% end %>

</section>
