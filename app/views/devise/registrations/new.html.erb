<section>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="fields">
      <div class="field">
        <%= f.text_field :name, placeholder: "Full Name", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", autocomplete: "current-password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password" %>
      </div>

      <div class="links"><%= render "devise/shared/links" %></div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</section>
